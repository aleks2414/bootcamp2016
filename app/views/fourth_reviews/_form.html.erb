<%= form_for([@user, @fourth_test, @fourth_review]) do |f| %>
  <% if @fourth_review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fourth_review.errors.count, "error") %> prohibited this fourth_review from being saved:</h2>

      <ul>
      <% @fourth_review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h2>Fase <strong>4. PIVOTEO Y PRESENTACIÓN</strong></h2>
  <hr class="blue">

  <p class="center">En esta fase vamos a calificar: la entrega del video y su duración, no su contenido y los cambios que hizo a su solución
</p>

  <div class="field">
    <%= f.label :video %><br>
    <!-- <%#= f.number_field :video %> -->
    <%= f.select :video, [["Entregó en tiempo y dura dos minutos o menos", 15], ["Sólo una de las dos: entregó en tiempo y dura dos minutos o menos", 8], ["No entregó en tiempo y no dura dos minutos o menos", 0]]%>
  </div>
  <div class="field">
    <%= f.label :calidad_de_video %><br>
    <!-- <%#= f.number_field :likes2 %> -->
    <%= f.select :likes2, [["La calidad de la imagen y el audio es buena", 5], ["La calidad de la imagen o del video no es lo suficientemente buena", 3], ["La calidad es muy mala", 0]]%>
  </div>
  <div class="field">
    <%= f.label :Cambios_a_la_solución %><br>
    <!-- <%#= f.number_field :aprendizaje2 %> -->
    <%= f.select :aprendizaje2, [["Hizo cambios significativos a su propuesta previa", 5], ["Hizo cambios superficiales a su propuesta anterior", 3], ["No hizo cambios a su propuesta anterior", 0]]%>
  </div>

  <br><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
