<!DOCTYPE html>
<html>
<head>
  <title>Bootcamp3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if alert %>
	<p class="alert"><%= alert %></p>
<% elsif notice %>
	<p class="notice"><%= notice %></p>
<% end %>

	<div class="menu">
		<ul class="topnav">
			<li class="hidden"><%= link_to "", root_path %></li>
			<% if user_signed_in? %>
				
				<% if current_user.admin? %>
					<li><%= link_to "Todas las Pruebas", users_path %></li>
					<li><%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %></li>
				<% else %>
					<li><%= link_to "Mi Prueba", users_path %></li>
					<li><%= link_to "Mi Perfil", edit_user_registration_path(@user) %></li>
					<li><%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %></li>
				<% end %>
			<% else %>
			<li><%= link_to "Iniciar Sesión", new_user_session_path %></li>
			<% end %>
			<li class="icon">
				<a href="javascript:void(0);" onclick="myFunction()">&#9776;</a>
			</li>
		</ul>
	</div>

	<hr class="blue">



<%= yield %>

</body>
</html>
